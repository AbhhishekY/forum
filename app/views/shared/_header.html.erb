<header role="banner" class="app-header" style=" background-color: transparent">
  <div style=" background-color: transparent">


  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path('cus') %>"/>
  <link rel="stylesheet" type="text/css" href="<%= stylesheet_path('custom') %>"/>
  <div class="clearfix" id="u287-6"><!-- content -->

    <h1 id="u287-2">R U</h1>
